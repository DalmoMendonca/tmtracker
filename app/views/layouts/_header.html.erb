          <ul class="dropdown-menu">
            <% @clubs.each do |club| %>
              <% @label = "awards-" + club.parameterize %>
              <%= form_tag charts_path, id: @label, method: :get do %>
                <%= hidden_field_tag(:clubname, club) %>
              <% end %>
              <%= link_to club, "#", :onclick => "$('##{@label}').submit()" %>
            <% end %>
          </ul>
        </li>

      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
