<p id="notice"><%= notice %></p>

<h1>Listing Speeches</h1>

<table>
  <thead>
    <tr>
      <th>Manual</th>
      <th>Project</th>
      <th>Title</th>
      <th>Date</th>
      <th>Club</th>
      <th>Comment</th>
      <th>Chart</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @speeches.each do |speech| %>
      <tr>
        <td><%= speech.manual %></td>
        <td><%= speech.project %></td>
        <td><%= speech.title %></td>
        <td><%= speech.date %></td>
        <td><%= speech.club %></td>
        <td><%= speech.comment %></td>
        <td><%= speech.chart_id %></td>
        <td><%= link_to 'Show', speech %></td>
        <td><%= link_to 'Edit', edit_speech_path(speech) %></td>
        <td><%= link_to 'Destroy', speech, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

