<p id="notice"><%= notice %></p>

<h1>Award Progress</h1>

<h3>Getting Close</h3>
<% if @charts.where.not("progress": 100).maximum("progress") < 75 %>
  <p>No members are close to getting an award.</p>
<% else %>
  <table class="table table-hover">
    <%= render 'thead' %>
    <tbody>
      <% @charts.each do |chart| %>
        <% if (chart.progress >= 75) && (chart.progress < 100)  %>
          <%= render 'rows', :chart => chart %>
        <% end %>
      <% end %>
    </tbody>
  </table>
<% end %>

<h3>In Progress</h3>
<table class="table table-hover">
  <%= render 'thead' %>
  <tbody>
    <% @charts.each do |chart| %>
      <% if chart.progress < 75  %>
        <%= render 'rows', :chart => chart %>
      <% end %>
    <% end %>
  </tbody>
</table>

<% if @charts.maximum("progress") == 100 %>
  <h3>Recently Completed</h3>
  <table class="table table-hover">
    <%= render 'thead' %>
    <tbody>
      <% @charts.each do |chart| %>
        <% if chart.progress == 100  %>
          <%= render 'rows', :chart => chart %>
        <% end %>
      <% end %>
    </tbody>
  </table>
<% end %>