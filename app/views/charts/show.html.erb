<p id="notice"><%= notice %></p>

<p>
<h2>
  <%= @members.find(@chart.member_id).name %>'s <%= @chart.name %> Progess
</h2>
</p>

<p>
  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">Manual</th>
        <th scope="col">Project</th>
        <th scope="col">Title</th>
        <th scope="col">Date</th>
        <th scope="col">Club</th>
        <th scope="col">Comment</th>
      </tr>
    </thead>
    <tbody>
      <% if @chart.speeches.nil? %>
        <tr>
          <td>No Speeches</td>
        </tr>
      <% else %>
        <% @chart.speeches.each do |s| %>
        	<tr>
        		<td><%= s.manual %></td>
        		<td><%= s.project %></td>
        		<td><%= s.title %></td>
        		<td><%= s.date %></td>
        		<td><%= s.club %></td>
        		<td><%= s.comment %></td>
        	</tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</p>

<%= link_to 'Edit', edit_chart_path(@chart) %>
